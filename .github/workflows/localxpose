name: Vandy
on: [push, workflow_dispatch]

jobs:
  build:

    runs-on: windows-latest
    timeout-minutes: 360 # tambahkan parameter ini dengan nilai yang Anda inginkan

    steps:
    - name: DOWNLOADING
      run: Invoke-WebRequest https://localxpose.io/downloads/windows/locx.zip -OutFile locx.zip
    - name: EXTRACT
      run: Expand-Archive locx.zip
    - name: AUTENTIFIKASI
      run: .\locx\locx.exe account login
    - name: ENABLE TS
      run: Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server'-name "fDenyTSConnections" -Value 0
    - run: Enable-NetFirewallRule -DisplayGroup "Remote Desktop"
    - run: Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server\WinStations\RDP-Tcp' -name "UserAuthentication" -Value 1
    - run: Set-LocalUser -Name "runneradmin" -Password (ConvertTo-SecureString -AsPlainText "P@ssw0rd!" -Force)
    - name: DONE!
      run: .\locx\locx.exe tunnel tcp --forwarding-to localhost:3389 --domain-name vandy --token <TOKEN>
